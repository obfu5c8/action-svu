{
  "name": "@obfu5c8/action-svu",
  "version": "1.0.0",
  "private": true,
  "description": "Github action for installing & running SVU semver tool",
  "main": "lib/main.js",
  "scripts": {
    "prepare": "run-s -ln postinstall",
    "postinstall": "husky install",
    "check": "run-p -ln lint:check format:check type:check",
    "build": "run-s -ln clean build:compile build:dist",
    "build:compile": "tsc",
    "build:dist": "ncc build --source-map --license licenses.txt",
    "type:check": "tsc --noEmit",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "lint": "eslint --fix src/**/*.ts",
    "lint:check": "eslint src/**/*.ts",
    "clean": "rimraf ./lib ./dist",
    "test": "jest",
    "all": "run-s -l build format lint package test"
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "yarn lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obfu5c8/action-svu.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.26.0",
    "eslint-plugin-eslint-comments": "latest",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-i18n-text": "^1.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  },
  "packageManager": "yarn@3.2.4"
}
